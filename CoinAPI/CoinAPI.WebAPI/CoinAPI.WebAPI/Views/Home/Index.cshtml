@{
    ViewBag.Title = "Api首页";
}
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<link href="~/Content/dataurl.css" rel="stylesheet" />
<link href="~/Content/reset.css" rel="stylesheet" />
<link href="~/Content/common.css" rel="stylesheet" />
<link href="~/Content/open-base.css" rel="stylesheet" />
<link href="~/Content/docmtCenter.css" rel="stylesheet" />
<body>
    <!-- header start -->
    <div class="top-header-menu">
        <div class="top-menu-cont">
            <h1 class="top-logo">
                <a class="top-logo-link" href="/home/index" alt="艾德思奇广告平台"></a>
            </h1>
        </div>
    </div>
    <!-- header end -->
    <div class="top-nav">
        <div class="option">
            <a href="/home/index" class="home-link home-link2">API</a>
        </div>
    </div>
    <!--api list-->
    <div class="container grid-s165m0 layout">
        <!--正文区 begin-->
        <div class="col-main bg_line">
            <div class="main-wrap ">
                <h1 class="title">API广告列表</h1>
                <div class="contentlist-api">
                    <ul class="layout">
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                            <li class="api-list-item ">
                                <span><a href="@item.ActionUrl" class="link">@item.Name</a></span>
                                <p class="api-list-intro">@item.Description</p>
                            </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
        <!--正文区 end-->
        <!--左侧导航栏 begin-->
        <div class="col-sub">
            <div class="category">
                <ul class="level-clean">
                    <li class="selected">
                        <a href="/home/index">api广告列表</a>
                    </li>
                </ul>
            </div>
        </div>
        <!--左侧导航栏 end-->
    </div>
    <!-- footer begin -->
    <div id="footer">
        <div class="footer">
            <div class="contact">
                <a class="weibo" href="/home/index" target="_blank">艾德思奇广告平台</a>
                <span class="email">网站合作 adsage.com</span>
                <span class="email">其他咨询 adsage.com</span>
            </div>
            <div class="about">
                <span class="copyright">Copyright &copy; 2003-2013 adsage.com 版权所有</span>
                <span class="links">
                    <a href="/home/index" target="_blank">关于我们</a>
                    <a href="/home/index" target="_blank">版权说明</a>
                </span>
            </div>
        </div>
    </div>
</body>
